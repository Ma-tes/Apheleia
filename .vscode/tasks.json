{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g0",
                "${file}",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lSDL2",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debugger"
        }
    ],
    "version": "2.0.0"
}